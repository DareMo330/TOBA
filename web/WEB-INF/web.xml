<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>TOBA</display-name>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>tobaserv.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>NewCustomerServlet</servlet-name>
  	<servlet-class>tobaserv.NewCustomerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TransactionServlet</servlet-name>
  	<servlet-class>tobaserv.TransactionServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>PasswordResetServlet</servlet-name>
  	<servlet-class>tobaserv.PasswordResetServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddBalanceServlet</servlet-name>
  	<servlet-class>tobaserv.AddBalanceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>NewCustomerServlet</servlet-name>
  	<url-pattern>/new_customer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TransactionServlet</servlet-name>
  	<url-pattern>/transaction</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>PasswordResetServlet</servlet-name>
  	<url-pattern>/password_reset</url-pattern>
  </servlet-mapping>
      <servlet-mapping>
  	<servlet-name>AddBalanceServlet</servlet-name>
  	<url-pattern>/add_balance</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/error_404.jsp</location>
  </error-page>
  <error-page>
  	<exception-type>java.lang.Throwable</exception-type>
  	<location>/error_java.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>